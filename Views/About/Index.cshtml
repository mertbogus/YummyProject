﻿@model List<YummyProject.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Foto Url</th>
        <th>Item 1</th>
        <th>Item 2</th>
        <th>Item 3</th>
        <th>Açıklama</th>
        <th>Video Url</th>
        <th>Phone Number</th>
        <th>Foto Url2</th>


        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {


        <tr>
            <td>@item.AboutId</td>
            <td><img src=@item.ImageUrl style="width:100px;height:100px;" /></td>
            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>@item.Description</td>
            <td>@item.VideoUrl</td>
            <td>@item.VideoUrl</td>
            <td><img src=@item.ImageUrl2 style="width:100px;height:100px;" /></td>

            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/About/CreateAbout" class="btn btn-primary">Yeni Hakkımızda Ekle</a>
