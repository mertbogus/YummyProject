﻿@model List<YummyProject.Models.SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h2>Sosyal Medya Düzenleme Sayfası</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>Link</th>
        <th>İsim</th>
        <th>İkon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Url</td>
            <td>@item.SocialMediaName</td>
            <td><i>@item.Icon</i> </td>
            <td><a href="/Social/DeleteSocial/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Social/UpdateSocial/@item.SocialMediaId" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>

<br />
<div class="text-center">
    <a href="/Social/AddSocial" class="btn btn-success">Yeni Etkinlik Ekle</a>
</div>