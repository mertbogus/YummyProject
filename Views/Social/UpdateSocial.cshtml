﻿@model YummyProject.Models.SocialMedia
@{
    ViewBag.Title = "UpdateSocial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h2>Sosyal Medya Güncelleme Sayfası</h2>
<br />

<form method="post" class="form-control">

    @Html.HiddenFor(x => x.SocialMediaId)

    <label><strong>Bağlantı</strong></label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    <br />
    <label><strong>İsim</strong></label>
    @Html.TextBoxFor(x => x.SocialMediaName, new { @class = "form-control" })
    <br />
    <label><strong>İkon</strong></label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />

    <div class="text-center">
        <button class="btn btn-warning">Güncelle</button>
    </div>
    <br />

</form>

