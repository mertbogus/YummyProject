@model List<YummyProject.Models.Feature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Öne Çıkan Alan</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Feauture/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
            <td><a href="" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

    
</table>

<a href="/Feauture/AddFeature" class="btn btn-danger">Yeni Öne Çıkan Alan Ekle</a>

