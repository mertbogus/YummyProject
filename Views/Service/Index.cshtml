﻿@model List<YummyProject.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h2>Hizmetler Düzenleme Sayfası</h2>
<br />


<table class="table table-hover">
    <tr>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Ikon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.Icon" style="width:30px ; height:30px" /></td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>

<br />
<div class="text-center">
    <a href="/Service/AddService" class="btn btn-success">Yeni Hizmet Ekle</a>
</div>

